<div class="list-wrap">
    <% @lists.each do |list| %>
        <div class="list-box">
            <% if list.image.attached? %>
                <%= image_tag list.image.variant(resize:'300x300') %>
            <% else %>
                <%= image_tag 'no_image.png', size: '300x300', alt: "no_image" %>
            <% end %>
            <div class="list-comment">
                <span class="list-body"><%= list.body %></span>
                <span class="list-title"><%= link_to list.title, todolist_path(list.id) %></span>
            </div>
        </div>
    <% end %>
</div>
